<%
  if note.new_record?
    submit_path = '#'
    submit_method = :post
  else
    submit_path = '#'
    submit_method = :patch
  end
%>
<%= form_for(note, url: submit_path, method: submit_method, class: 'mt-5 break-words') do |f| %>
  <%= f.rich_text_area :content, id: note.id, class: "" %>
<% end %>
