<div class="max-w-6xl mx-auto p-4">
  <!-- Add Note Section -->
  <div class="flex justify-center mb-8">
    <div class="w-1/2">
      <%= render 'note', note: Note.new %>
    </div>
  </div>

  <!-- Pinned Notes -->
  <h2 class="text-2xl font-bold text-center mb-6">Pinned Notes</h2>

  <!-- Notes Grid -->
  <div id="notes_list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @pinned_notes.each do |note| %>
      <%= render 'note', note: note %>
    <% end %>
  </div>

  <!-- All Notes -->
  <h2 class="text-2xl font-bold text-center mb-6">Others</h2>

  <!-- Notes Grid -->
  <div id="notes_list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @notes.each do |note| %>
      <%= render 'note', note: note %>
    <% end %>
  </div>
</div>